<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/am_dlContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/acm_clMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/acm_main_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen10dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/flm_imgBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_back"
                    android:tint="@color/black"
                    android:padding="@dimen/dimen5dp"
                    tools:ignore="contentDescription" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/am_img_home"
                    android:layout_width="@dimen/dimen35dp"
                    android:layout_height="@dimen/dimen35dp"
                    android:layout_margin="@dimen/dimen5dp"
                    android:padding="@dimen/dimen3dp"
                    android:src="@drawable/ic_home"/>

                <ImageView
                    android:id="@+id/am_img_login"
                    android:layout_width="@dimen/dimen35dp"
                    android:layout_height="@dimen/dimen35dp"
                    android:layout_margin="@dimen/dimen5dp"
                    android:src="@drawable/ic_login"/>

                <ImageView
                    android:id="@+id/am_img_logout"
                    android:layout_width="@dimen/dimen35dp"
                    android:layout_height="@dimen/dimen35dp"
                    android:layout_margin="@dimen/dimen5dp"
                    android:src="@drawable/ic_logout"/>

                <ImageView
                    android:id="@+id/am_img_menu"
                    android:layout_width="@dimen/dimen35dp"
                    android:layout_height="@dimen/dimen35dp"
                    android:padding="@dimen/dimen5dp"
                    android:layout_margin="@dimen/dimen5dp"
                    android:src="@drawable/ic_menu"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/actM_frmMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/acm_main_footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acm_main_header" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/acm_main_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_footer"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_footer"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/am_txv_portafolio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="@string/developer"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/am_img_linkedin"
                        android:layout_width="@dimen/dimen35dp"
                        android:layout_height="@dimen/dimen35dp"
                        android:layout_margin="@dimen/dimen5dp"
                        android:src="@drawable/ic_linkedin"/>

                    <ImageView
                        android:id="@+id/am_img_github"
                        android:layout_width="@dimen/dimen35dp"
                        android:layout_height="@dimen/dimen35dp"
                        android:layout_margin="@dimen/dimen5dp"
                        android:src="@drawable/ic_github"/>

                    <ImageView
                        android:id="@+id/am_img_x"
                        android:layout_width="@dimen/dimen35dp"
                        android:layout_height="@dimen/dimen35dp"
                        android:layout_margin="@dimen/dimen5dp"
                        android:src="@drawable/ic_x"/>

                    <ImageView
                        android:id="@+id/am_img_email"
                        android:layout_width="@dimen/dimen35dp"
                        android:layout_height="@dimen/dimen35dp"
                        android:layout_margin="@dimen/dimen5dp"
                        android:src="@drawable/ic_correo"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>